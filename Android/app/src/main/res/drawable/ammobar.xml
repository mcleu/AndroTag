<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="left" >
    <item android:id="@android:id/background">

        <shape>
            <solid android:color="@color/dt_slate_gray"/>
            <stroke android:width="1dp" android:color="@color/dt_ammo_color"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip
            android:gravity="right" >
            <shape >
                <solid android:color="@color/dt_ammo_color" />
            </shape>
        </clip>
    </item>
</layer-list>