<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="evans.dave.androtag.app.JoinGameActivity"
    android:background="@color/dt_bg_color">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Game ID"
            android:id="@+id/gidText"
            android:textColor="@android:color/white"
            android:textSize="32dp" />

        <EditText
            android:maxLength="4"
            android:digits="0123456789ABCDEF"
            android:inputType="textCapCharacters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/gidEdit"
            android:layout_weight="1"
            android:text="0000"
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:background="@color/dt_slate_gray"
            android:layout_marginLeft="10dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team ID"
            android:id="@+id/tidText"
            android:textColor="@android:color/white"
            android:textSize="32dp" />

        <EditText
            android:maxLength="2"
            android:digits="0123456789ABCDEF"
            android:inputType="textCapCharacters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tidEdit"
            android:layout_weight="1"
            android:text="00"
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:background="@color/dt_slate_gray"
            android:layout_marginLeft="10dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player ID"
            android:id="@+id/pidText"
            android:textColor="@android:color/white"
            android:textSize="32dp" />

        <EditText
            android:maxLength="2"
            android:digits="0123456789ABCDEF"
            android:inputType="textCapCharacters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pidEdit"
            android:layout_weight="1"
            android:text="00"
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:background="@color/dt_slate_gray"
            android:layout_marginLeft="10dp"
            android:gravity="center" />
    </LinearLayout>

    <Button
        style="@style/dt_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Choose Loadout"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@android:color/white"
        android:onClick="startLoadout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
