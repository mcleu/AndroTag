<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="evans.dave.duinotag" >

    <application
        android:name=".AndrotagApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainGameActivity"
            android:label="@string/title_activity_main_game"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="evans.dave.duinotag.MainActivity" />
        </activity>
        <activity
            android:name=".AccountActivity"
            android:label="@string/title_activity_account"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="evans.dave.duinotag.MainActivity" />
        </activity>
        <activity
            android:name=".JoinGameActivity"
            android:label="@string/title_activity_join_game" >
        </activity>
        <activity
            android:name=".LoadoutConfigActivity"
            android:label="@string/title_activity_loadout_config" >
        </activity>
        <activity
            android:name=".LoadoutConfigActivity2"
            android:label="@string/title_activity_loadout_config" >
        </activity>
        <activity
            android:name=".ListViewExampleActivity"
            android:label="@string/title_activity_list_view_example" >
        </activity>
    </application>

</manifest>
